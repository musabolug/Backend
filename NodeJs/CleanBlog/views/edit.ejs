<%- include("partials/_header") -%>

<body>

  <%- include("partials/_navigation") -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Edit Blog</h1>

          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <form novalidate method="POST" action="/blogs/<%= blog._id %>?_method=PUT" enctype="multipart/form-data">
          <div class="control-group">
            <div style="border: 1px #dee2e6 solid; border-radius: 15px; margin-bottom: 10px;" class="form-group floating-label-form-group controls">
              <label>Post Title</label>
              <input style="padding-left: 10px;" value="<%= blog.title %>"  type="text" class="form-control" placeholder="Title"  name="title" required data-validation-required-message="Please enter a title.">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div style="border: 1px #dee2e6 solid;border-radius: 15px;margin-bottom: 10px " class="form-group floating-label-form-group controls">
              <label>Subtitle</label>
              <textarea style="padding-left: 10px;"   rows="2" class="form-control" placeholder="Subtitle"  name="subtitle" required data-validation-required-message="Please enter a subtitle."><%= blog.subtitle %></textarea>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div  style="border: 1px #dee2e6 solid;border-radius: 15px;margin-bottom: 10px" class="form-group floating-label-form-group controls">
              <label>Post Detail</label>
              <textarea style="padding-left: 10px;"  rows="5" class="form-control" placeholder="Description"  name="description" required data-validation-required-message="Please enter a description."><%= blog.description %></textarea>
              <p class="help-block text-danger"></p>
            </div>
          </div>
        
          <br>
          <div id="success"></div>
          <button type="submit" class="btn btn-primary" id="sendMessageButton">Update</button>
        </form>
      </div>
    </div>
  </div>

  <hr>

  <%- include("partials/_footer") -%>

  <!-- Contact Form JavaScript -->
  <script src="js/jqBootstrapValidation.js"></script>
  <script src="js/contact_me.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
