<%- include("partials/_header") -%>

<body>

  <%- include("partials/_navigation") -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url(https://i.pinimg.com/564x/67/19/ed/6719ed7b2e5ab0c5a071913abda15a41.jpg)">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= blog.title %></h1>
            <h2 class="subheading"><%= blog.subtitle %></h2>
            <span class="meta">Posted by Musabolug
            <br>  <%= blog.creationDate %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <P><%= blog.description %></P>
        </div>
      </div>
    </div>
  </article>

  <hr>
  <div style="justify-content: center; display: flex; ;">
    <a href="/blogs/<%= blog._id %>?_method=DELETE"  style=" margin-right: 10px; " class="btn btn-danger"
      onclick="return confirm('Are you Sure?')"
      >delete</a>
    <a href="/blogs/edit/<%= blog._id %>" class="btn btn-primary">update</a>
  </div>
  
  <%- include("partials/_footer") -%>
  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
